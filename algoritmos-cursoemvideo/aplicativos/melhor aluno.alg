algoritmo "melhoraluno"
var
    A, cont : inteiro
    Nomealuno: caractere
inicio
      escreva ("Quantos alunos a turma tem? ")
      leia (A)
      cont <- A
      enquanto (cont = A) faca
      escreval ("aluno", cont)
      escreval ("Nome do aluno: ")
      leia (Nomealuno)
      escreval ("Nota de", Nomealuno, ": ")
      fimenquanto
fimalgoritmo
